---
layout: default
---
{% if page._styles %}
  <!-- Page/Post style -->
  <style type="text/css">
    {{ page._styles }}
  </style>
{% endif %}

<div class="post">
  {% assign show_title = page.title %}
  {% assign show_description = page.description %}
  {% if page.hide_title == true or page.hide_title == 'true' %}
    {% assign show_title = false %}
  {% endif %}
  {% if page.hide_description == true or page.hide_description == 'true' %}
    {% assign show_description = false %}
  {% endif %}
  {% if show_title or show_description %}
    <header class="post-header">
      {% if show_title %}
        <h1 class="post-title">{{ page.title }}</h1>
      {% endif %}
      {% if show_description %}
        <p class="post-description">{{ page.description }}</p>
      {% endif %}
    </header>
  {% endif %}

  <article>
    {{ content }}
  </article>

  {% if page.related_publications %}
    <h2>References</h2>
    <div class="publications">
      {% bibliography --cited_in_order %}
    </div>
  {% endif %}

  {% if site.giscus and page.giscus_comments %}
    {% include giscus.liquid %}
  {% endif %}
</div>
